@model EditManufacturerViewModel
@{
    ViewData["Title"] = "Edit Brand";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h2>Edit Brand</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="@Model.Name" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Name">Brand</label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <p> </p>
            <div class="mb-3">
                <label asp-for="@Model.CountryId" class="form-label">Manifacturer</label>
                <select asp-for="@Model.CountryId" class="form-control">
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country.Id">@country.Name</option>
                    }
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <p> </p>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Change</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

