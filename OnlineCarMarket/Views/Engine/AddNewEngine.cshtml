@model AddEngineViewModel
@{
    ViewData["Title"] = "Add a new Engine";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h2>Add New Car in our Market.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="@Model.ManifacturerId" class="form-label">Manifacturer</label>
                <select asp-for="@Model.ManifacturerId" class="form-control">
                    @foreach (var manifacturer in Model.Manifacturers)
                    {
                        <option value="@manifacturer.Id">@manifacturer.Name</option>
                    }
                </select>
                <span asp-validation-for="ManifacturerId" class="text-danger"></span>
            </div>

            <p> </p>

            <div class="mb-3">
                <label asp-for="@Model.TypeId" class="form-label">Fuel Type</label>
                <select asp-for="@Model.TypeId" class="form-control">
                    @foreach (var fuel in Model.Types)
                    {
                        <option value="@fuel.Id">@fuel.Fuel</option>
                    }
                </select>
                <span asp-validation-for="ManifacturerId" class="text-danger"></span>
            </div>

            <p> </p>

            <div class="form-floating">
                <input asp-for="@Model.Power" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Power">Horse Power</label>
                <span asp-validation-for="@Model.Power" class="text-danger"></span>
            </div>

            <p> </p>
            

            <div class="form-floating">
                <input asp-for="@Model.Volume" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.Volume">Volume</label>
                <span asp-validation-for="@Model.Volume" class="text-danger"></span>
            </div>
            <p> </p>

            <div class="form-floating">
                <input asp-for="@Model.Consumption" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.Consumption">Consumption</label>
                <span asp-validation-for="@Model.Consumption" class="text-danger"></span>
            </div>
          
            

            <p> </p>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add Car</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

