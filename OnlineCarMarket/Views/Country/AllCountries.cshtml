@model List<ShowCountryModel>

@{
    ViewData["Title"] = "Countries";
}

<div class="text-center">
    <h3>All Countries</h3>
</div>


<a class="nav-link text-dark text-center" asp-area="" asp-controller="Country" asp-action="AddCountry">Add New Country</a>


<div>

    @foreach (var car in Model)
    {
        <div class="card col-4" style="width: 15rem;">
            <div class="card-body, bg-success text-white">
                <p class="mb-0">@car.Name</p>
            </div>
            <p></p>
            <div class="text-center">
                <a asp-controller="Country" asp-action="EditTheGivenCountry" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
            </div>
        </div>
    }
</div>