@model RegisterCarViewModel
@{
    ViewData["Title"] = "Add a new car";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h3>Add New Car to our Market.</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="@Model.ManifacturerId" class="form-label">Manifacturer</label>
                <select asp-for="@Model.ManifacturerId" class="form-control">
                    @foreach (var manifacturer in Model.Manifacturers)
                    {
                        <option value="@manifacturer.Id">@manifacturer.Name</option>
                    }
                </select>
                <span asp-validation-for="ManifacturerId" class="text-danger"></span>
            </div>


            <div class="form-floating">
                <input asp-for="@Model.Type" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Type"></label>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.EngineId" class="form-label">Engine</label>
                <select asp-for="@Model.EngineId" class="form-control">
                    @foreach (var engine in Model.Engine)
                    {
                        <option value="@engine.Id">@engine.HorsePower @engine.Manifacturer.Name</option>
                    }
                </select>
                <span asp-validation-for="EngineId" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="@Model.BodyTypeId" class="form-label">Body</label>
                <select asp-for="@Model.BodyTypeId" class="form-control">
                    @foreach (var body in Model.BodyTypes)
                    {
                        <option value="@body.Id">@body.Name</option>
                    }
                </select>
                <span asp-validation-for="BodyTypeId" class="text-danger"></span>
            </div>


            <div class="form-floating">
                <input asp-for="@Model.Milage" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.Milage">Kilometers</label>
                <span asp-validation-for="@Model.Engine" class="text-danger"></span>
            </div>
            <p> </p>

            <div class="form-floating">
                <input asp-for="@Model.FirstRegistration" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.FirstRegistration">First Registration</label>
                <span asp-validation-for="@Model.FirstRegistration" class="text-danger"></span>
            </div>
             <p> </p>
            <div class="form-floating">
                <input asp-for="@Model.NumberOfDoors" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.NumberOfDoors">Number of doors</label>
                <span asp-validation-for="@Model.NumberOfDoors" class="text-danger"></span>
            </div>
            <p> </p>

            <div class="form-floating">
                <input asp-for="@Model.Price" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.Price">Price</label>
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

             <p> </p>
            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add Car</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

