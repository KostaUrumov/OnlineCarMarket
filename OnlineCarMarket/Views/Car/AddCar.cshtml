@model RegisterCarViewModel

@{
    ViewBag.Title = "Add Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Model" class="form-label">Model</label>
                <input asp-for="@Model.Model" class="form-control" aria-required="true" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <label asp-for="@Model.Model" class="form-label">Manifacturer</label>
            <select asp-for="@Model.ManifacturerId" class="form-control">
                @foreach (var manifacturer in Model.Manifacturers)
                {
                    <option value="@manifacturer.Id">@manifacturer.Name</option>
                }
            </select>
            <span asp-validation-for="ManifacturerId" class="text-danger"></span>

            <label asp-for="@Model.Model" class="form-label">Engine</label>
            <select asp-for="@Model.EngineId" class="form-control">
                @foreach (var engine in Model.Engine)
                {
                    <option value="@engine.Id">@engine.Manifacturer.Name @engine.Volume @engine.HorsePower @engine.FuelConsumption</option>
                }
            </select>
            <span asp-validation-for="EngineId" class="text-danger"></span>

            <label asp-for="@Model.Model" class="form-label">Body Shape</label>
            <select asp-for="@Model.BodyTypeId" class="form-control">
                @foreach (var body in Model.BodyTypes)
                {
                    <option value="@body.Id">@body.Name</option>
                }
            </select>
            <span asp-validation-for="BodyTypeId" class="text-danger"></span>

            <div class="mb-3">
                <label asp-for="@Model.Milage" class="form-label"></label>
                <input asp-for="@Model.Milage" class="form-control" aria-required="true" />
                <span asp-validation-for="Milage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.FirstRegistration" class="form-label">First Registration</label>
                <input asp-for="@Model.FirstRegistration" class="form-control" aria-required="true" />
                <span asp-validation-for="FirstRegistration" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.NumberOfDoors" class="form-label">Number of doors</label>
                <input asp-for="@Model.NumberOfDoors" class="form-control" value="" />
                <span asp-validation-for="NumberOfDoors" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
