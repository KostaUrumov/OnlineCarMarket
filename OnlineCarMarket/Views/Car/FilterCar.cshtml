@model SearchCarViewModel

@{
    ViewData["Title"] = "Search for car/s";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h2>Search your car.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="@Model.ManifacturerId" class="form-label">Manifacturer</label>
                <select asp-for="@Model.ManifacturerId" class="form-control">
                    @foreach (var manifacturer in Model.Manifacturers)
                    {
                        <option value="@manifacturer.Id">@manifacturer.Name</option>
                    }
                </select>
                <span asp-validation-for="ManifacturerId" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="@Model.EngineTypeId" class="form-label">Fuel</label>
                <select asp-for="@Model.EngineTypeId" class="form-control">
                    @foreach (var engine in Model.EngineType)
                    {
                        <option value="@engine.Id">@engine.Fuel</option>
                    }
                </select>
                <span asp-validation-for="EngineTypeId" class="text-danger"></span>
            </div>

            <p> </p>

            <div class="form-floating">
                <input asp-for="@Model.MinimumPrice" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.MinimumPrice">Lowest price</label>
                <span asp-validation-for="@Model.MinimumPrice" class="text-danger"></span>
            </div>
            <p> </p>

            <div class="form-floating">
                <input asp-for="@Model.MaximumPrice" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.MaximumPrice">Highest price</label>
                <span asp-validation-for="@Model.MaximumPrice" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Search</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}